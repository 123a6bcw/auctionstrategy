<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.asgui.StatisticController">
    <top>
      <ToolBar>
          <Button fx:id="getBack" onAction="#getOnWelcomeScreen" text="Back to main menu" minWidth="200"/>
          <Button fx:id="runCycle" onAction="#startCycle" text="Run new genetic cycle" minWidth="250"/>
          <Button fx:id="basicStatisticShow" onAction="#showBasicStatistic" text="show statistic from log file" minWidth="250"/>
      </ToolBar>
        <MenuBar>
            Menu
        </MenuBar>
    </top>

    <center>
        <ScrollPane GridPane.hgrow="ALWAYS" GridPane.vgrow="NEVER">
            <Label fx:id="statisticLabel" styleClass="verySmall" wrapText="true" />
        </ScrollPane>
    </center>

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</BorderPane>
