<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar ?>
<?import java.net.URL?>
<BorderPane fx:controller="ru.asgui.WelcomeController" xmlns:fx="http://javafx.com/fxml">
  <top>
    <ToolBar>
        <Button fx:id="runCycle" onAction="#startCycle" text="Run new genetic cycle" minWidth="200"/>
        <Button fx:id="runLogView" onAction="#viewLogFile" text="Watch statistic from log file" minWidth="250"/>
    </ToolBar>
  </top>
    <center>
        <VBox>
          <Label fx:id="mainLabel" styleClass="label" wrapText="true">
          </Label>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</BorderPane>